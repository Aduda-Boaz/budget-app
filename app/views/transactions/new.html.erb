<%= render partial: "shared/navbar", locals: { location: 'NEW TRANSACTION'} %>

<div class="form_category">
  <%= form_with model: @transaction, url: category_transactions_path  do |f| %>

    <div class="form_inputs">
      <div>
        <%= f.text_field :name, placeholder: "Name", class: "input"%>
      </div>

      <div>
        <%= f.number_field :amount, placeholder: "Price", class: "input"%>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Add", class: "sign"%>
    </div>
  <% end %>
</div>
